<Window x:Class="StudentRegistrationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRegistrationWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,-120,-62">
        <Label x:Name="UserName" Content="User Name" HorizontalAlignment="Left" Margin="115,78,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Password" HorizontalAlignment="Left" Margin="115,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="253,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="267,136,0,0" VerticalAlignment="Top" Height="26" Width="106"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" Margin="222,221,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
